#include "/home/jb/scripts/config/colors-terminal.sexy-5"

#define FONT xft:dejavu sans:condensed:size=10
#define FONTMONO xft:dejavu sans mono:size=10
#define FONTMONO_ dejavu sans mono 10

!global Font
*font:         FONT

!xft
Xft.dpi:       96
Xft.antialias: true
Xft.hinting:   true
Xft.hintstyle: hintslight
Xft.rgba:      rgb
Xft.lcdfilter: lcddefault

!emacs
emacs.fontBackend: xft
emacs.bitmapIcon: on
emacs.font: FONTMONO_
emacs.geometry: 90x25

!dunst
dunst.font: FONT

!xterm
xterm*faceName: FONTMONO

!urxvt
URxvt.letterSpace: -1
URxvt*scrollBar: false
URxvt*fading: 30
URxvt*font: FONTMONO
URxvt*buffered: true
URxvt*print-pipe: cat > $HOME/$(echo urxvt.dump.$(date +'%Y%M%d%H%m%S'))
