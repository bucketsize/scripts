#include "/home/pi/scripts/config/colors-terminal.sexy-4"

#define FONT 	 xft:fira sans:condensed:size=9,xft:dejavu sans condensed:size=9
#define FONTMONO xft:fira code:size=9,xft:dejavu sans mono:size=9

!global Font
*font:         FONT

!xft
Xft.dpi:       110
Xft.antialias: true
Xft.hinting:   true
Xft.autohint:  false
Xft.hintstyle: hintslight
Xft.rgba:      none
Xft.lcdfilter: lcddefault

!emacs
!emacs.fontBackend: 
emacs.bitmapIcon: on
emacs.font: FONTMONO
emacs.geometry: 90x25

!dunst
dunst.font: FONT

!xterm
xterm*faceName: FONTMONO

!urxvt
URxvt*scrollBar: false
URxvt*font: FONTMONO
URxvt*buffered: true
URxvt*lineSpace: -1
URxvt.letterSpace: -1
URxvt*iconFile: /usr/share/icons/Adwaita/32x32/apps/utilities-terminal.png

TVim*iconFile: /usr/share/icons/Adwaita/32x32/apps/utilities-terminal.png
