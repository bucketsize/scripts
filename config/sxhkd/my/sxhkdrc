// launcher
super + r
	dmenu_run
super + e
	leafpad
super + t
	lxterminal
super + f
	pcmanfm

// lockscreen
super + l
	~/scripts/xdg/x.lock-i3.sh

// screenshot
Print
	scrot -e 'mv $f ~/Pictures/'
control + Print
	scrot -s -e 'mv $f ~/Pictures/'
control + alt + Delete
  notify-send 'bonkers!'
control + super + x
  xkill

// volume
control + bracketright
	pactl set-sink-volume @DEFAULT_SINK@ +10%
control + bracketleft
	pactl set-sink-volume @DEFAULT_SINK@ -10%
control + backslash
	pactl set-sink-mute   @DEFAULT_SINK@ toggle
@XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +10%
@XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -10%
@XF86AudioMute
	pactl set-sink-mute   @DEFAULT_SINK@ toggle

// window placement
super + Left
  xdotool getactivewindow windowmove 03% 02% windowsize 48% 92%
super + Right
  xdotool getactivewindow windowmove 52% 02% windowsize 48% 92%
super + Up
  xdotool getactivewindow windowmove 04% 04% windowsize 92% 92%
super + Down
  xdotool getactivewindow windowmove 20% 20% windowsize 60% 60%
