// launcher

super + r
	dmenu_run -l 10

super + e
	leafpad

super + t
	lxterminal

super + f
	pcmanfm

// lockscreen
super + l
	~/scripts/sys_ctl/ctl.lua cmd scr_lock

// screenshot
Print
	~/scripts/sys_ctl/ctl.lua cmd scr_cap

control + Print
	~/scripts/sys_ctl/ctl.lua cmd scr_cap_sel

control + alt + Delete
  notify-send 'bonkers!'

control + super + x
  xkill

// volume
control + bracketright
	~/scripts/sys_ctl/ctl.lua cmd vol_up

control + bracketleft
	~/scripts/sys_ctl/ctl.lua cmd vol_down

control + backslash
	~/scripts/sys_ctl/ctl.lua cmd vol_mute

@XF86AudioRaiseVolume
	~/scripts/sys_ctl/ctl.lua cmd vol_up

@XF86AudioLowerVolume
	~/scripts/sys_ctl/ctl.lua cmd vol_down

@XF86AudioMute
	~/scripts/sys_ctl/ctl.lua cmd vol_mute

// window placement
super + Left
	~/scripts/sys_ctl/ctl.lua cmd win_left

super + Right
	~/scripts/sys_ctl/ctl.lua cmd win_right

super + Up
	~/scripts/sys_ctl/ctl.lua cmd win_max

super + Down
	~/scripts/sys_ctl/ctl.lua cmd win_unmax

super + m
	~/scripts/sys_ctl/ctl.lua cmd win_big

super + alt + m
	~/scripts/sys_ctl/ctl.lua cmd win_small

control + alt + 1
	~/scripts/sys_ctl/ctl.lua cmd dtop_viga

control + alt + 2
	~/scripts/sys_ctl/ctl.lua cmd dtop_hdmi

control + alt + 3
	~/scripts/sys_ctl/ctl.lua cmd dtop_extn

control + alt + 4
	~/scripts/sys_ctl/ctl.lua cmd kb_led_on

control + alt + 5
	~/scripts/sys_ctl/ctl.lua cmd kb_led_off

