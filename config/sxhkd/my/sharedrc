// launcher
super + r
	dmenu_run -l 10

// lockscreen
super + l
	~/scripts/sys_mon/control.lua cmd scr_lock

// screenshot
Print
	~/scripts/sys_mon/control.lua cmd scr_cap

control + Print
	~/scripts/sys_mon/control.lua cmd scr_cap_sel

control + alt + Delete
  notify-send 'bonkers!'

control + super + x
  xkill

// volume
control + bracketright
	~/scripts/sys_mon/control.lua cmd vol_up

control + bracketleft
	~/scripts/sys_mon/control.lua cmd vol_down

control + backslash
	~/scripts/sys_mon/control.lua cmd vol_mute

@XF86AudioRaiseVolume
	~/scripts/sys_mon/control.lua cmd vol_up

@XF86AudioLowerVolume
	~/scripts/sys_mon/control.lua cmd vol_down

@XF86AudioMute
	~/scripts/sys_mon/control.lua cmd vol_mute

control + alt + 1
	~/scripts/sys_mon/control.lua cmd dtop_viga

control + alt + 2
	~/scripts/sys_mon/control.lua cmd dtop_hdmi

control + alt + 3
	~/scripts/sys_mon/control.lua cmd dtop_extn

control + alt + 4
	~/scripts/sys_mon/control.lua cmd kb_led_on

control + alt + 5
	~/scripts/sys_mon/control.lua cmd kb_led_off




