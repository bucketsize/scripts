#!/bin/sh

# opendesktop autostart
# TODO:
# 2. download and cycle through wallpapers
# 3. brightness control
# 4. complete shortcuts
# 9. fix compositing; compton is crashing in alpine

stopAll(){
	killall picom
	killall dunst
	killall tint2
	killall conky
	killall lx-polkit
	xautolock -exit
}
startAll(){
	picom &
	dunst &
	tint2 &
	conky &
	lx-polkit &
	xautolock \
		-time 5 -locker "~/scripts/xdg/x.lock-i3.sh" \
		-killtime 10 -killer "xterm" \
		-notify 30 -notifier "notify-send -u critical -t 10000 -- 'Lock activated ETA 30s'" &

	~/scripts/xdg/x.wallpaper.sh &
	~/scripts/xdg/sys.mond.lua &
}
case $i in
    stop)
        stopAll
        ;;
    *)
        stopAll
        startAll
        ;;
esac



