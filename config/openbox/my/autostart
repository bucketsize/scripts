#!/bin/sh

# opendesktop autostart
# TODO:
# 2. download and cycle through wallpapers
# 3. brightness control
# 4. complete shortcuts
# 9. fix compositing; compton is crashing in alpine

XDG_APPLET_PATH=~/scripts/xdg

stopAll(){
	killall picom
	killall dunst
	killall tint2
	killall conky
	killall lx-polkit
}
startAll(){
	picom &
	dunst &
	tint2 &
	conky &
	lx-polkit &
	xautolock -time 15 -locker "~/scripts/x.lock-i3.sh" -notify 30 -notifier "notify-send -u critical -t 10000 -- 'Locking screen in 30 seconds'" &
	$XDG_APPLET_PATH/x.wallpaper.sh &
	$XDG_APPLET_PATH/sys.mond.lua &
}
case $i in
    stop)
        stopAll
        ;;
    *)
        stopAll
        startAll
        ;;
esac



