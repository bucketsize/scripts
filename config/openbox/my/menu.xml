<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://openbox.org/
    file:///usr/share/openbox/menu.xsd">

    <menu id="root-menu" label="Openbox 3">
        <item label="Terminal emulator">
            <action name="Execute"><execute>x-terminal-emulator</execute></action>
        </item>
        <item label="Web browser">
            <action name="Execute"><execute>x-www-browser</execute></action>
        </item>
        <!-- This requires the presence of the 'openbox-menu' package to work -->
        <menu id="/Debian" />
				<separator />
				<menu id="applications" label="Applications" execute="~/scripts/xdg/obmenu-pipe.sh" />
        <separator />
        <item label="Settings">
            <action name="Execute"><execute>obconf</execute></action>
        </item>
        <item label="Reconfigure">
            <action name="Reconfigure"><execute>openbox --reconfigure</execute></action>
            <action name="" />
        </item>
        <item label="Exit">
            <action name="Execute">
                <command>openbox --exit</command>
            </action>
        </item>
        <separator />
        <item label="Shutdown">
            <action name="Execute">
                <command>systemctl poweroff</command>
            </action>
        </item>
        <item label="Restart">
            <action name="Execute">
                <command>systemctl reboot</command>
            </action>
        </item>
        <item label="Suspend">
            <action name="Execute">
                <command>systemctl suspend</command>
            </action>
        </item>
        <item label="Hibernate">
            <action name="Execute">
                <command>systemctl hibernate</command>
            </action>
        </item>
    </menu>

</openbox_menu>
