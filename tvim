#!/bin/sh

icons="/usr/share/icons/HighContrast/32x32/apps/vim.png"
terms="urxvt gnome-terminal"
for icon in $icons; do
    if [ -f $i]; then
        for term in $terms; do
            if [ -f "/usr/bin/$term" ]; then
                $term -icon $icon -e vim $*
                exit 0
            fi
        done
    fi
done
x-terminal-emulator -name tvim -e vim $*
