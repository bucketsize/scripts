#!/usr/bin/env lua
require "luarocks.loader"

local Sh = require('minilib.shell')
local Pr = require('minilib.process')

local cfg = {
	terms = {
		"alacritty",
		"stterm",
		"urxvt",
		"qterminal",
		"gnome-terminal",
		"xterm"
	},
	terms_cmd = {
		stterm = "stterm -f 'monospace:pixelsize=16' -g 96x40",
		urxvt = "urxvt",
		alacritty = "alacritty",
		qterminal = "qterminal",
		gnometerminal = "gnome-terminal",
		xterm = "xterm"
	},
	ivims = {
		"flatpak run io.neovim.nvim",
		"nvim",
		"vim"
	}
}

function select(fs)
	for _,f in ipairs(fs) do
		local flatpak = f:match('flatpak run ([%w.]+)')
		if flatpak then
			if Sh.path_exists("/var/lib/flatpak/app/"..flatpak) then
				return f
			end
		end
		if Sh.file_exists(f) then
			return f
		end
	end
end

local ivim=select(cfg.ivims)
local term=select(cfg.terms)

local icmd=string.format("%s -e %s", cfg.terms_cmd[term], ivim)
if arg[1] then
	icmd=string.format("%s -e %s %s", cfg.terms_cmd[term], ivim, arg[1])
end
print("# ", icmd)

io.popen(icmd)
